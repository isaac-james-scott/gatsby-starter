{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "jsx": "preserve",
      "lib": ["dom", "esnext"],
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noUnusedLocals": false,
      "baseUrl": "./src",
      "paths": {
        "@components/*": ["components/*"],
        "@util/*": ["util/*"],
        "@pages/*": ["pages/*"],
        "@images/*": ["images/*"]
      }
    },
    "exclude": ["node_modules", "public", ".cache"]
  }